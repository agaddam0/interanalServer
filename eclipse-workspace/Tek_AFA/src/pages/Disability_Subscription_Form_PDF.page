<apex:page standardController="Enrollment_Form__c" extensions="SignatureFormPDFext" standardStylesheets="false" docType="html-5.0" sidebar="false" showHeader="false" renderAs="pdf" applyHtmlTag="false">
    <head>
        <style type="text/css" media="print">
            @page :first {
                padding-top: 50px;
                padding-bottom: 0px;
                @top-center {
                    content: element(header);
                }
            }
            @page {
                padding-top: 25px;
                padding-bottom: 0px;
                @top-center {
                    content: element(header2);
                }
                @bottom-center {
                    content: element(footer);
                }
            }
            body {
                font-family: sans-serif;
            }
            .logo {
                width: 300px;
                padding-left: 300px;
                padding-top: 0px;
            }
            div.header {
                padding: 25px 10px 10px;
                position: running(header);
                text-align: center;
                font-size: x-small;
                color: gray;
            }
            div.header2 {
                padding: 25px 10px 10px;
                position: running(header2);
                text-align: center;
                font-size: x-small;
                color: gray;
            }
            div.footer {
                display: block;
                padding-bottom: 20px;
                position: running(footer);
                font-size: small;
                color: gray;
            }
            .pagenumber:before 
            {
                content: counter(page);
            }
            .pagecount:before 
            {
                content: counter(pages);
            }
            #double {
                margin-bottom: 20px;
                overflow: hidden;
            } 
            #double li {
                float:left;
                width: 50%;
            }
            
        </style>
