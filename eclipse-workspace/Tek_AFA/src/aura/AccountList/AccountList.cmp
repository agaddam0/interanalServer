<aura:component >
    <aura:attribute name="account" type="Account" />
    
    <lightning:card variant="Narrow" title="{!v.account.Name}"
                    iconName="standard:account">
        <aura:set attribute="actions">
            <lightning:button name="details" label="Details" onclick="{!c.goToRecord}" />
        </aura:set>
        <aura:set attribute="footer">
            <lightning:badge label="{!v.account.Industry}"/>
        </aura:set>
        <p class="slds-p-horizontal--large">
            <b>Division: </b> {!v.account.Division__c}
        </p>
        <p class="slds-p-horizontal--large">
            <b>MPC Number: </b> {!v.account.MCP_Number__c}
        </p>
    </lightning:card>
</aura:component>